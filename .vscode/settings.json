{
	"files.exclude": {
		"dist": false
	},
	"search.exclude": {
		"dist": true
	},
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		{
			"language": "html",
			"autoFix": true
		}
	],
	"tslint.enable": true,
	"tslint.jsEnable": true,
	"typescript.tsc.autoDetect": "off",
	"typescript.tsdk": "./node_modules/typescript/lib",
	"mocha.files.glob": "src/test/*",
	"mocha.requires": [
		"babel-register",
		"ts-node/register"
	],
	"mocha.options": {
		"--opts",
		"src/test/mocha.opts",
		"--require",
		"src/test/index.ts"
	}
}